# Production Environment Configuration for Immersive AI RPG
NODE_ENV=production
PORT=3001

# Database (using same database, different schema)
DATABASE_URL=postgresql://adventure_user:your_secure_password_here@localhost:5432/adventure_platform

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (should match main backend)
JWT_SECRET=your_jwt_secret_here

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# WebSocket
WS_PORT=3002

# CORS
CORS_ORIGIN=http://31.220.18.189

# Game Settings
MAX_PLAYERS_PER_ROOM=6
SESSION_TIMEOUT_MINUTES=30
AUTO_SAVE_INTERVAL_SECONDS=60

# AI Settings
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.8

# File Storage
SAVE_GAME_DIR=/opt/adventure-platform/saves
WORLD_DATA_DIR=/opt/adventure-platform/worlds

# Logging
LOG_LEVEL=info
LOG_DIR=/opt/adventure-platform/logs
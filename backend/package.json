{
  "name": "adventure-platform-backend",
  "version": "2.0.0",
  "description": "Complete Node.js backend for Adventure Platform Pro - A choose-your-own-adventure game platform with real-time multiplayer",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required'",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "db:reset": "node scripts/resetDatabase.js",
    "logs:clear": "rm -rf logs/*",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "adventure",
    "game",
    "platform",
    "multiplayer",
    "websocket",
    "express",
    "postgresql",
    "redis",
    "jwt",
    "rest-api",
    "real-time"
  ],
  "author": "Adventure Platform Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.0.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "socket.io": "^4.6.0",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.13.0",
    "openai": "^4.24.1",
    "axios": "^1.6.5",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "logs/*",
      "uploads/*"
    ],
    "delay": 1000
  }
}
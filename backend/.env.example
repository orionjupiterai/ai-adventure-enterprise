# Environment Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://adventure_user:adventure_secret@localhost:5432/adventure_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adventure_platform
DB_USER=adventure_user
DB_PASSWORD=adventure_secret
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_change_in_production_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# File Upload Configuration
UPLOAD_MAX_SIZE=100MB
AVATAR_MAX_SIZE=5MB
WORLD_MAX_SIZE=50MB

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=10
AI_RATE_LIMIT_MAX=20

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=Adventure Platform <noreply@adventureplatform.com>

# Security Configuration
HELMET_CSP_ENABLED=true
TRUST_PROXY=false

# Session Configuration
SESSION_SECRET=your_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VOICE_CHAT=false
ENABLE_ANALYTICS=true
ENABLE_EMAIL_VERIFICATION=false

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Development Configuration
DEVELOPMENT_SEED_DATA=false
DEVELOPMENT_AUTO_MIGRATE=true